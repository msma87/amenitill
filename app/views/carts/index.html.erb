<div class="container py-4">
  <!-- Header with fictitious logo and brand -->
  <header class="d-flex justify-content-center align-items-center mb-5">
    <h1 class="display-4 fw-bold text-center" style="color: #5C8EF1;">
      <i class="bi bi-receipt"></i> AmeniTill
    </h1>
  </header>
  <!-- Section: List of available products -->
  <h2 class="h5 text-secondary mb-3">Available Products</h2>
  <div class="row g-3">
    <% @products.each do |product| %>
      <div class="col-12 col-sm-6 col-lg-4">
        <div class="card h-100 shadow-sm">
            <!-- Row with name on left and price on right -->
            <div class="card-body d-flex flex-column">
              <!-- Promo badge -->
              <% if product.code == 'GR1' %>
                <span class="badge" style="background-color: #C2F4B9; color: #212529;" mb-2"><i class="bi bi-gift me-1"></i> Buy 1 Get 1 Free</span>
              <% elsif product.code == 'SR1' %>
                <span class="badge" style="background-color: #C2F4B9; color: #212529;" mb-2"><i class="bi bi-box2-heart me-1"></i> €4.50 each on 3+</span>
              <% elsif product.code == 'CF1' %>
                <span class="badge" style="background-color: #C2F4B9; color: #212529;" mb-2"><i class="bi bi-cup-hot me-1"></i> 33% off on 3+</span>
              <% end %>
              <!-- Name and price aligned -->
              <div class="d-flex justify-content-between align-items-center mb-3">
                <span class="text-dark d-flex align-items-center">
                  <% icon_class =
                      case product.code
                      when 'GR1' then 'bi-cup-straw'
                      when 'SR1' then 'bi-heart'
                      when 'CF1' then 'bi-cup-hot'
                      else 'bi-box'
                      end %>
                  <i class="bi <%= icon_class %> me-2 text-secondary fs-5"></i>
                  <%= product.name %>
                </span>
                <span class="text-muted">€<%= number_with_precision(product.price, precision: 2) %></span>
              </div>
              <!-- Button stays below -->
              <%= button_to add_to_cart_path(code: product.code), method: :post,
              class: 'btn btn-amenitill btn-sm mt-auto' do %>
              <i class="bi bi-cart-plus me-1"></i> Add to Cart
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <!-- Section: Cart content -->
  <div class="d-flex justify-content-between align-items-center mt-5 mb-3">
    <h2 class="h5 text-secondary m-0">Your Cart</h2>
    <% if @cart_items.any? %>
      <%= button_to empty_cart_path, method: :post,
            data: { turbo: false },
            class: 'btn btn-warning btn-sm', style: "background-color: #F3D77F; border-color: #F3D77F;" do %>
        <i class="bi bi-x-circle me-1"></i> Empty Cart
      <% end %>
    <% end %>
  </div>
  <div class="card shadow-sm">
    <div class="card-body">
      <% if @cart_items.any? %>
        <ul class="list-group mb-3">
          <% @cart_items.each_with_index do |item, index| %>
            <li class="list-group-item shadow-sm rounded p-3">
              <div class="d-flex justify-content-between align-items-start">
                <!-- Ícone + nome + quantidade -->
                <div class="d-flex align-items-start">
                  <% icon_class =
                      case item[:product].code
                      when 'GR1' then 'bi-cup-straw'
                      when 'SR1' then 'bi-heart'
                      when 'CF1' then 'bi-cup-hot'
                      else 'bi-box'
                      end %>
                  <i class="bi <%= icon_class %> text-secondary fs-4 me-2"></i>
                  <div>
                    <strong><%= item[:product].name %></strong><br>
                    <small class="text-muted">Quantity: <%= item[:quantity] %></small>
                  </div>
                </div>
                <!-- Subtotal e desconto à direita -->
                <div class="text-end">
                  <span class="d-block">Subtotal: €<%= number_with_precision(item[:subtotal], precision: 2) %></span>
                  <% if item[:discount] > 0 %>
                    <span class="text-success">Discount: -€<%= number_with_precision(item[:discount], precision: 2) %></span>
                  <% end %>
                </div>
              </div>
              <!-- Botão remover embaixo no mobile -->
              <div class="mt-3 text-end">
                <%= button_to remove_from_cart_path(code: item[:product].code), method: :post,
                      class: 'btn btn-outline-danger btn-sm px-3 py-1', form: { data: { turbo: false } } do %>
                  <i class="bi bi-trash me-1"></i> Remove
                <% end %>
              </div>
            </li>
          <% end %>
        </ul>
        <!-- Display the total amount using the calculate_total method -->
        <!-- Total: styled for emphasis -->
        <div class="alert alert-primary fw-bold text-center">Total: <%= "€ " + number_with_precision(@total, precision: 2) %>
        </div>
      <% else %>
        <p class="text-muted">Your cart is empty.</p>
      <% end %>
    </div>
  </div>
</div>
